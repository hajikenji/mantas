<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class="field">
    <%= form.label :time %>
    <%= form.datetime_field :time , placeholder: "例:○月○日○時 等" %>
  </div>
  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities.keys %>
  </div>
  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, { '未着手': 1, '着手中': 2, '完了': 3} %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
  
<% end %>
