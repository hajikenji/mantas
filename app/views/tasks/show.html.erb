<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>
<p>
  <strong>Content:</strong>
  <%= @task.content %>
</p>
<p>
  <strong>Time:</strong>
  <%= @task.time %>
</p>
<p>
  <strong>Priority:</strong>
  <%= @task.priority %>
</p>
<p>
  <strong>Status:</strong>
  <% case @task.status %>
        <% when "0" %>
        未着手
        <% when "1" %>
        着手中
        <% when "2" %>
        完了
        <% end %>
</p>
<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
